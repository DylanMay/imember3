<?xml version="1.0" encoding="utf-8"?>

<!-- 
如果listview中有按钮等子控件，那么listview本身的点击事件被屏蔽
android:descendantFocusability="blocksDescendants"接触屏蔽
 -->
 <LinearLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="fill_parent"
  android:layout_height="wrap_content" 
  android:orientation="vertical"
  android:descendantFocusability="blocksDescendants"
 >
 <LinearLayout
 android:layout_width="fill_parent"
  android:layout_height="wrap_content" 
  android:orientation="horizontal"
  android:background="@drawable/listitem_mycard"
  android:padding="20dip"
  android:gravity="center_vertical"
 >
 <RelativeLayout 
   android:layout_width="110dip"
   android:layout_height="75dip"
   android:background="@color/white"
   >
 <ImageView
	android:id="@+id/storecard_logo"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	/>
 </RelativeLayout>
	<LinearLayout
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:layout_weight="1"
	android:orientation="vertical"
	android:paddingLeft="10dip"
	android:paddingRight="10dip"
	>
	<TextView
	android:id="@+id/storecard_title"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:layout_weight="1"
	android:text="会员卡1"
	android:typeface="monospace"
	android:textSize="20dip"
	android:textColor="@color/black"
	android:lines="1"
	/>
	<LinearLayout
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	>
	<TextView
	android:id="@+id/storecard_name"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:layout_marginBottom="5dip"
	android:layout_weight="1"
	android:typeface="monospace"
	android:textSize="13dip"
	android:textColor="@color/light_black2"
	android:lines="1"
	/>
	</LinearLayout>
	<LinearLayout
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:visibility="gone"
	>
	<TextView 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:text="有效期："
	android:typeface="monospace"
	android:textSize="10dip"
	android:textColor="@color/light_black2"
	/>
	<TextView 
	android:id="@+id/storecard_effectivedate"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:layout_weight="1"
	android:typeface="monospace"
	android:text="永久"
	android:textSize="10dip"
	android:textColor="@color/light_black2"
	android:lines="1"
	/>
	</LinearLayout>
	
	</LinearLayout>
		<ImageView
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:layout_marginLeft="10dip"
	android:background="@drawable/right"
	android:layout_gravity="center_vertical"
	android:visibility="gone"
/>
</LinearLayout>
</LinearLayout>
