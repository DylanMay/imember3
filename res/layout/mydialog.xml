<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="fill_parent"
>
<LinearLayout
	android:layout_width="260dip"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:padding="8dip"
>
<ImageView
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/mydialog_top"
	/>
	<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:paddingTop="10dip"
	android:paddingBottom="10dip"
	android:layout_weight="1"
	android:background="@drawable/mydialog_bg"
	>
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:paddingLeft="20dip"
	android:paddingRight="15dip"
	android:gravity="center_vertical"
>
	<ImageView
	android:id="@+id/mydialog_icon"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@android:drawable/ic_dialog_info"
	android:visibility="gone"
	/>
	<TextView
	android:id="@+id/mydialog_title"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="center_horizontal"
	android:text="提示"
	android:textColor="@android:color/black"
	android:textSize="25dip"
	android:singleLine="true" 
	android:ellipsize="marquee"
	android:focusable="true" 
	android:focusableInTouchMode="true" 
	android:marqueeRepeatLimit="marquee_forever"
	android:visibility="invisible"
	/>
</LinearLayout>
<ScrollView
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_weight="1"
	android:paddingLeft="20dip"
	android:paddingRight="20dip"
	android:paddingTop="10dip"
	android:paddingBottom="10dip"
	android:scrollbars="vertical"
	android:layout_gravity="center"
	android:fillViewport="true"
>
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:gravity="center"
>
<ImageView
	android:id="@+id/load"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@anim/myload"
	android:visibility="gone"
/>
<ProgressBar
    android:id="@+id/loadbar"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  style="?android:attr/progressBarStyleSmall"
  android:visibility="gone"
  />
<TextView
	android:id="@+id/mydialog_message"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="是否退出计次通？"
	android:textColor="@color/orange"
	android:textSize="17dip"
	android:visibility="gone"
/>
</LinearLayout>
</ScrollView>
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:paddingLeft="30dip"
	android:paddingRight="30dip"
	android:paddingTop="10dip"
> 
<Button
	android:id="@+id/mydialog_btn_left"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_weight="1"
	android:layout_marginRight="15dip"
	android:text="确定"
	android:textColor="@android:color/black"
	android:textSize="15dip"
	android:background="@drawable/btn_dialog_bg"
	android:visibility="gone"
/>
<Button
	android:id="@+id/mydialog_btn_right"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_weight="1"
	android:layout_marginLeft="15dip"
	android:text="取消"
	android:textColor="@android:color/black"
	android:textSize="15dip"
	android:background="@drawable/btn_dialog_bg"
	android:visibility="gone"
/>
</LinearLayout>
</LinearLayout>
<ImageView
    android:id="@+id/line_bottom"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/mydialog_bottom"
	/>
</LinearLayout>

</FrameLayout>